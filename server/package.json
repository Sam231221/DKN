{
  "name": "dkn-server",
  "version": "1.0.0",
  "description": "DKN Knowledge Management System - Express.js Backend",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate-manual": "tsx src/db/apply-migration-manual.ts",
    "db:apply": "tsx src/db/apply-migration.ts",
    "db:apply-invitations": "tsx src/db/apply-invitations-migration.ts",
    "db:apply-email-verification": "tsx src/db/apply-email-verification-migration.ts",
    "db:apply-repositories-columns": "tsx src/db/apply-repositories-columns.ts",
    "db:push": "drizzle-kit push",
    "db:up": "drizzle-kit up",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:introspect": "drizzle-kit introspect",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed-organizational": "tsx src/db/seed-organizational.ts",
    "db:clean": "tsx src/db/clean-database.ts",
    "db:reset": "tsx src/db/clean-database.ts && tsx src/db/seed-organizational.ts",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "express",
    "drizzle",
    "typescript",
    "knowledge-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/nodemailer": "^7.0.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.12",
    "postgres": "^3.4.3",
    "string-similarity": "^4.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
